[project]
	description = Packaging content for instack (distgit)
[access "refs/*"]
  read = group openstack/instack-distgit-core
  owner = group openstack/instack-distgit-ptl
[access "refs/heads/*"]
	label-Code-Review = -2..+2 group openstack/instack-distgit-core
	label-Code-Review = -2..+2 group openstack/instack-distgit-ptl
	label-Verified = -2..+2 group openstack/instack-distgit-ptl
	label-Workflow = -1..+1 group openstack/instack-distgit-core
	label-Workflow = -1..+1 group openstack/instack-distgit-ptl
	label-Workflow = -1..+0 group Registered Users
	submit = group openstack/instack-distgit-ptl
	read = group Registered Users
    read = group openstack/instack-distgit-core
[access "refs/meta/config"]
    read = group Registered Users
    read = group openstack/instack-distgit-core
[receive]
	requireChangeId = true
[submit]
	mergeContent = false
	action = fast forward only
